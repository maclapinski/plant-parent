<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/search-bar.css" />
</head>
<body>
  <main>
    <div class="wrapper">
      <%- include('../includes/header.ejs') %> 
      <div class="content__header">
        <h1>Search</h1>
      </div>
      <%- include('../includes/search-bar.ejs') %> <% if (plants.length > 0) {
      %>
      <div class="grid">
        <% for (let plant of plants) { %> <%- include('../includes/plant-card.ejs', {plant: plant, showAddBtn: true, showWishListBtn: true}) %> <% } %>
      </div>
      <% } else{ %> 
        <div class="placeholder__container">
          <div class="placeholder-img__container"><img src="/images/placeholder.png" alt="" class="placeholder__img"></div>
          
          <div class="placeholder-text__container"><h2>Nothing to see here...</h2> <h3>Choose your search options to find plants perfect for you.</h3> </div>
        </div>
        
        <% } %> 

        
    </div>
  </main>
  <%- include('../includes/footer.ejs') %>
   <%- include('../includes/end.ejs') %>

