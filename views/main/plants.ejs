  <main>
    <h1>All Plants</h1>
    <% if (plants.length > 0) { %>

        <div class="grid">
            <% for (let plant of plants) { %>
                <article class="card plant-item">
                    <header class="card__header">
                        <h1 class="plant__title">
                            <%= plant.name %>
                        </h1>
                    </header>
                    <div class="card__image">
                        <img src="<%= plant.imageUrl %>" alt="<%= plant.title %>">
                    </div>
                    <div class="card__content">

                        <p class="plant__description">
                            <%= plant.description %>
                        </p>
                    </div>
                    <div class="card__actions">
                        
                        <%- include('../includes/add-to-my-plants.ejs', {plant: plant}) %>
                    </div>
                </article>
                <% } %>
        </div>





