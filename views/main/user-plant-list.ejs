<%- include('../includes/head.ejs') %>

</head>
<body>
  <main>
    <div class="wrapper">
      <%- include('../includes/header.ejs') %> 
      <div class="content__header">
        <h1>My Plants</h1>
      </div>
      <% if (plants.length > 0) { %>
      <div class="grid">
        <% for (let item of plants) { %> <%- include('../includes/plant-card.ejs', {plant: item.plant, showAddBtn:
        false, showWishListBtn: false}) %> <% } %>
      </div>
      <% } else{ %> <div class="placeholder__container">
        <div class="placeholder-img__container"><img src="/images/placeholder.png" alt="" class="placeholder__img"></div>
        
        <div class="placeholder-text__container"><h2>There are no plants on your list yet...</h2> <h3>Click All Plants to find your plants and add them to the list.</h3> <a class="action__btn primary__btn"
          href="/plants">All Plants</a></div>
      </div> <% } %> 
    </div>
  </main>
  <%- include('../includes/footer.ejs') %> <%- include('../includes/end.ejs') %>
</body>
