<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css" />
<link rel="stylesheet" href="/css/auth.css" />
<!-- </head> -->
<body>
  <main>
    <div class="wrapper">
      <%- include('../includes/header.ejs') %> <% if (errMessage) { %>
      <div class="user__message user__message--error"><%= errMessage %></div>
      <% } %>
      <div class="auth">
        <div class="auth__card">
          <div class="title"><h1>Reset your password</h1></div>
          <div class="card__content">
            <p class="card__message">If you are currently logged in, after changing password you will be logged out.</p>
            <form class="auth__form" action="/auth/new-password" method="POST">
              <div class="form-control">
                <label for="password">Password</label>
                <div class="input">
                  <input
                    class="password <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                    type="password"
                    name="password"
                    id="password"
                    value="<%= oldInput.password %>"
                  /><button
                    aria-label="show password"
                    type="button"
                    class="far fa-eye-slash togglePassword"
                    onclick="togglePassword(this)"
                  ></button
                  ><i class="fas fa-times-circle password-fail"></i><i class="fas fa-check-circle password-pass"></i>
                </div>
                <div class="password-popover"></div>
                <p class="password-requirements__title">Password must contain:</p>
                <p class="password-requirements__text">
                  minimum eight characters, <br />
                  at least one uppercase letter (a-Z), <br />
                  one lowercase letter (A-Z) <br />
                  one number (0-9) <br />
                  one special character (!@#$%^&*)
                </p>
              </div>
              <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <div class="input">
                  <input
                    class="password <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>"
                    type="password"
                    name="confirmPassword"
                    id="confirmPassword"
                    value="<%= oldInput.confirmPassword %>"
                  /><button
                    aria-label="show password"
                    type="button"
                    class="far fa-eye-slash togglePassword"
                    onclick="togglePassword(this)"
                  ></button
                  ><i class="fas fa-times-circle confirmPassword-fail"></i
                  ><i class="fas fa-check-circle confirmPassword-pass"></i>
                </div>
                <div class="confirmPassword-popover"></div>
              </div>
              <input type="hidden" name="userId" value="<%= userId %>" />
              <input type="hidden" name="passwordToken" value="<%= passwordToken %>" />
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <button class="action__btn primary__btn" type="submit">Update Password</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include('../includes/footer.ejs') %> <%- include('../includes/end.ejs') %>
</body>
